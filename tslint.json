{
    /*
     * Possible values:
     * - the name of a built-in config
     * - the name of an NPM module which has a "main" file that exports a config object
     * - a relative path to a JSON file
     */
    "extends": "tslint:recommended",
    "rules": {
        "indent": [
            true,
            "spaces",
            4
        ],
        "triple-equals": [true, "allow-undefined-check", "allow-null-check"],
        "quotemark": [true, "single", "jsx-double"],
        "only-arrow-functions": [false],
        "interface-name": [true, "never-prefix"],
        "object-literal-sort-keys": false,
        "max-line-length": [true, 165],
        "trailing-comma": [false],
        "whitespace": [true, "check-decl", "check-operator", "check-module", "check-separator", "check-type"],
        "member-ordering": [true, { "order": ["private-static-field", "protected-static-field", "public-static-field", "private-instance-field", "protected-instance-field", "public-instance-field", "constructor"] }],
        "ordered-imports": false,
        "no-angle-bracket-type-assertion": false,
        "object-literal-shorthand": false,
        "callable-types": false,
        "array-type": [true, "array"]
    }
}
