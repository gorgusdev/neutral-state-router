{
	"compilerOptions": {
		"target": "es5",
		"module": "es6",
		"moduleResolution": "node",
		"lib": ["dom", "scripthost", "es5", "es2015.iterable", "es2015.promise"],
		"importHelpers": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"removeComments": true,
		"sourceMap": true,
		"declaration": true,
		"outDir": "esm/"
	},
	"include": [
		"./src/*.test.ts",
	],
	"files": [
		"./typings/defs.d.ts",
		"./src/index.ts"
	]
}